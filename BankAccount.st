Object subclass: #Account	instanceVariableNames: 'balance interestRate'	classVariableNames: ''	poolDictionaries: ''	category: 'BankAccount'!!Account methodsFor: 'initialization' stamp: 'nathanormond 10/8/2019 09:26'!initialize 	balance := 0.	! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 10:08'!yearsUntil: amount	| year |	year:= 0.		[  (self balanceAfter: year) < amount ] whileTrue:[ 		year := year + 1.	].	^ year.		! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 09:47'!checkBalance	^ balance.! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 09:39'!credit: amount	amount > 0 ifTrue: [ 		Transcript show: 'original balance: '.		Transcript show: balance.		balance := balance + amount.		Transcript cr.		Transcript show: amount.		Transcript show: ' credited to balance'.		Transcript cr.		Transcript show: 'New balance: '. 		Transcript show: balance.	]	! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 09:57'!debit: amount	amount > 0 ifTrue:[		balance > amount ifTrue:[			Transcript cr.			Transcript show: 'debiting amount '.			Transcript show: amount.			Transcript show: ' from balance '.			Transcript show: balance.			Transcript cr.						balance := balance - amount.			Transcript show: 'Success!! new balance: '.			Transcript show: balance.					] ifFalse: [ 			Transcript cr.			Transcript show: 'insufficient funds to perform transaction'.		 ]	] ifFalse: [ 		Transcript cr.		Transcript show: 'invalid debit amount'.	]! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 09:48'!checkRate	^ interestRate.! !!Account methodsFor: 'as yet unclassified' stamp: 'nathanormond 10/8/2019 10:00'!balanceAfter: years	^ balance * ((1 + interestRate) raisedTo: years).! !Account subclass: #CurrentAccount	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'Bank